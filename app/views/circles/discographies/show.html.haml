- content_for :title do
  = t('.title', name: @discography&.circle&.name_ja, title: @discography&.title_ja)
%section.section
  .box
    .tile.is-ancestor
      .tile.is-parent
        .tile.is-child.is-5
          .has-text-centered
            = image_tag "http://via.placeholder.com/300x300"
        .tile.is-child.is-7
          %table.table.is-fullwidth.is-size-5
            %tbody
              %tr
                %th
                  = t('.discography_title')
                %td
                  = @discography&.title_ja
              %tr
                %th
                  = t('.circle_name')
                %td
                  = @discography&.circle&.name_ja
              %tr
                %th
                  = t('.event_name')
                %td
                  = @discography&.event&.title_ja
              %tr
                %th
                  = t('.release_date')
                %td
                  - if @discography&.release_date
                    = l(@discography&.release_date)
  .box
    .tile.is-ancestor
      .tile.is-parent
        .tile.is-child
          %table.table.is-size-6.is-fullwidth
            %tbody
              %tr
                %th
                %td
                  .title.is-size-5= t('.track_list')
              - @discography.songs.sort_by{ |song| song.track_number }.each do |song|
                %tr
                  %th.has-text-right
                    = "#{song.track_number}."
                  %td
                    .has-text-weight-semibold
                      = song.title_ja
                    - if song.vocalists.present?
                      .is-size-6
                        = t('.vocalists', vocalists: song.vocalists_name)
                    - if song.arrangers.present?
                      .is-size-6
                        = t('.arrangers', arrangers: song.arrangers_name)
                    - if song.rearrangers.present?
                      .is-size-6
                        = t('.rearrangers', rearrangers: song.rearrangers_name)
                    - if song.composers.present?
                      .is-size-6
                        = t('.composers', composers: song.composers_name)
                    - if song.lyricists.present?
                      .is-size-6
                        = t('.lyricists', lyricists: song.lyricists_name)
                    - if song.original_songs.present?
                      .is-size-6
                        = t('.original_songs', original_songs: song.original_songs_title)

