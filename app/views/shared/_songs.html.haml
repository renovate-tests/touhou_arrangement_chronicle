.columns
  .column.is-11
    %table.table.is-striped.is-hoverable
      %thead
        %tr
          %th= t('.circle_name')
          %th= t('.song_title')
          %th= t('.discography_title')
          %th= t('.vocalists')
          %th= t('.arrangers')
          %th= t('.lyricists')
          %th= t('.original_songs')
      %tbody
        - songs.each do |song|
          %tr
            %td= song&.circle_name_ja
            %td= song&.title_ja
            %td= song&.discography_title_ja
            %td= song&.vocalists_list
            %td= song&.arrangers_list
            %td= song&.lyricists_list
            %td= song&.original_songs_list
