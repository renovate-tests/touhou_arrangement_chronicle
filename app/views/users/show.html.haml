- content_for :title do
  = "@#{@user.name}"
%section.section
  .columns
    .column.is-2
      .tile.is-ancestor
        .tile.is-vertical
          .tile
            %figure.is-1by1
              = image_tag avatar_image, size: '180x180', class: 'rounded-2'
          .tile
            %h3.is-size-6= "@#{@user.name}"
    .column
      .tabs
        %ul
          %li.is-active
            = link_to t('common.orverview'), '#'
          %li
            = link_to t('common.collections'), '#'
          %li
            = link_to t('common.favorite'), '#'
          %li
            = link_to t('common.mylist'), '#'
